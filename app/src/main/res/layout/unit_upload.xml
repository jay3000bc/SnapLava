<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:elevation="3dp"
    android:layout_margin="4dp"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_unit"
            android:layout_margin="5dp"
            android:text="mmusic.jpg"
            android:textSize="15dp"
            android:layout_alignParentTop="true"
            android:textColor="#000"
            android:id="@+id/file_name"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_unit">
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:id="@+id/image_progress"
                android:layout_margin="4dp"
                android:background="#ea1e1e"
                android:adjustViewBounds="true"
                android:layout_toLeftOf="@+id/text100"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100%"
                android:textColor="#000"
                android:textSize="11dp"
                android:layout_alignParentRight="true"
                android:id="@+id/text100"
                /></RelativeLayout>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/image_unit"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="5dp"

            /> <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_unit"
        android:layout_margin="2dp"
        android:text="250Kb"
        android:textSize="12dp"
        android:textColor="#a3a0a0"
        android:id="@+id/file_size"
        android:layout_below="@+id/file_name"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
