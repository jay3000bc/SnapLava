<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_upload"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.snaplava.SnapLava.GallaryActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="2dp"
            android:layout_margin="7dp"
            android:elevation="4dp"
            android:id="@+id/cardView_one"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/uploading_image"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="3dp"
                    android:src="@drawable/user_icon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:layout_margin="3dp"
                    android:layout_toRightOf="@+id/uploading_image"
                    android:text="File name"
                    android:id="@+id/file_current"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/file_current"
                    android:id="@+id/file_size"
                    android:layout_margin="2dp"
                    android:textSize="12dp"
                    android:layout_toRightOf="@+id/uploading_image"

                    />
                <ProgressBar
                    android:id="@+id/donut_progress"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:progressBackgroundTint="#fa03b8"
                    android:backgroundTint="#fff"
                    android:layout_below="@+id/uploading_image"
                    android:layout_margin="3dp"
                    android:progress="50"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_view_compl"
            android:layout_below="@+id/cardView_one"
            android:layout_margin="4dp"

            />
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
