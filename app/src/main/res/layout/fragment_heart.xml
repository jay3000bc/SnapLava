<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/image_aftersetting"
    tools:context="com.snaplava.SnapLava.frags.layout.HeartFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.snaplava.SnapLava.customs.RectangularView
            android:id="@+id/View_one"
            android:layout_width="300dp"

            android:layout_height="300dp"

            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/corners"
            android:scaleType="centerCrop"
            android:src="@drawable/background" />

        <com.snaplava.SnapLava.customs.TouchImageView
            android:id="@+id/View_two"
            android:layout_width="200dp"
            android:layout_height="200dp"

            android:layout_alignBottom="@+id/View_one"
            android:layout_alignEnd="@+id/View_one"
            android:layout_marginBottom="29dp"
            android:layout_marginEnd="17dp"
            android:scaleType="centerCrop"
            android:src="@drawable/background" />
    </RelativeLayout>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id = "@+id/drag_image"
        android:visibility="invisible"
        android:alpha="0.7"
        />

</LinearLayout>
